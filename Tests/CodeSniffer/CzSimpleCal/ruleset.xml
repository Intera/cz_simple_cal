<?xml version="1.0"?>
<ruleset name="CsSimpleCal">
	<description>Based on PSRDefault. Adjust only if REALLY neccessary!</description>
	<rule ref="PSRDefault"/>
	<rule ref="Generic.Files.LineLength">
		<exclude-pattern>Configuration/TCA/*</exclude-pattern>
	</rule>
	<rule ref="Generic.NamingConventions.UpperCaseConstantName">
		<exclude-pattern>Classes/Domain/Model/Enumeration/*</exclude-pattern>
	</rule>
	<rule ref="PSR1.Methods.CamelCapsMethodName">
		<exclude-pattern>Classes/Hook/DataHandlerHook.php</exclude-pattern>
	</rule>
	<rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
		<exclude-pattern>Classes/Domain/Model/Event.php</exclude-pattern>
	</rule>
</ruleset>
