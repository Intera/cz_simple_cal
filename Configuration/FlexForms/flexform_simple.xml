<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xml:sheet.general
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <view.defaultPid>
                        <TCEforms>
                            <label>
                                LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xml:field.view.defaultPid
                            </label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </view.defaultPid>
                </el>
            </ROOT>
        </sDEF>
        <slider>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xml:sheet.slider
                    </sheetTitle>
                </TCEforms>

                <type>array</type>

                <el>
                    <settings.gridWidth>
                        <TCEforms>
                            <label>
                                LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xlf:field.settings.gridWidth
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">
                                            LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xlf:field.settings.gridWidth.I.two_columns
                                        </numIndex>
                                        <numIndex index="1">two_columns</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">
                                            LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xlf:field.settings.gridWidth.I.four_columns
                                        </numIndex>
                                        <numIndex index="1">four_columns</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.gridWidth>

                    <settings.slider.label>
                        <label>
                            LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xlf:field.settings.slider.label
                        </label>
                        <config>
                            <type>input</type>
                        </config>
                    </settings.slider.label>

                    <settings.slider.link>
                        <label>
                            LLL:EXT:cz_simple_cal/Resources/Private/Language/locallang_flex.xlf:field.settings.slider.link
                        </label>
                        <config>
                            <type>input</type>
                            <renderType>inputLink</renderType>
                            <size>50</size>
                            <softref>typolink</softref>
                        </config>
                    </settings.slider.link>
                </el>
            </ROOT>
        </slider>
        <rss>
            <ROOT>
                <TCEforms>
                    <sheetTitle>RSS</sheetTitle>
                </TCEforms>

                <type>array</type>

                <el>
                    <settings.rss.upcoming.channelDescription>
                        <TCEforms>
                            <label>Anstehende Termine - Beschreibung des RSS Feeds</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                            </config>
                        </TCEforms>
                    </settings.rss.upcoming.channelDescription>

                    <settings.rss.upcoming.channelTitle>
                        <TCEforms>
                            <label>
                                Anstehende Termine - Titel des RSS Feeds überschreiben (als Standard wird die
                                Überschrift + "Anstehende Termine" verwendet)
                            </label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.rss.upcoming.channelTitle>

                    <settings.rss.latest.channelDescription>
                        <TCEforms>
                            <label>Neuste Termine - Beschreibung des RSS Feeds</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                            </config>
                        </TCEforms>
                    </settings.rss.latest.channelDescription>

                    <settings.rss.latest.channelTitle>
                        <TCEforms>
                            <label>
                                Neuste Termine - Titel des RSS Feeds überschreiben (als Standard wird die Überschrift
                                + "Neuste Termine" verwendet)
                            </label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.rss.latest.channelTitle>

                    <settings.rss.disable>
                        <TCEforms>
                            <label>RSS Feed deaktivieren</label>
                            <config>
                                <type>check</type>
                                <default/>
                            </config>
                        </TCEforms>
                    </settings.rss.disable>
                </el>
            </ROOT>
        </rss>
    </sheets>
</T3DataStructure>
